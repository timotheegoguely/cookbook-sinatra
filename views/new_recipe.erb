<h3>Create a new recipe</h3>
<hr>
<form class="form-horizontal" method="POST" action="/create">
  <div class="form-group">
    <label for="name" class="col-sm-2">Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="recipe[name]" id="name" placeholder="Charlotte aux fraises">
    </div>
  </div>
  <div class="form-group">
    <label for="cookingTime" class="col-sm-2">Cooking time</label>
    <div class="col-sm-3">
      <input type="time" class="form-control" name="recipe[cooking_time]" id="cookingTime">
    </div>
  </div>
  <div class="form-group">
    <label for="difficulty" class="col-sm-2">Difficulty</label>
    <div class="col-sm-3">
      <select class="form-control" name="recipe[difficulty]" id="difficulty">
        <option>Very easy</option>
        <option>Easy</option>
        <option>Intermediate</option>
        <option>Difficult</option>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label for="description" class="col-sm-2">Description</label>
    <div class="col-sm-10">
      <textarea class="form-control" rows="5" name="recipe[description]" id="description" placeholder="Enter your descriptionâ€¦"></textarea>
    </div>
  </div>

  <button type="submit" class="btn btn-lg btn-primary pull-right">Create</button>
</form>
